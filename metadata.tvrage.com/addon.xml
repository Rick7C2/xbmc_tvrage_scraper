<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.tvrage.com"
       name="TVRage Scraper"
       version="1.0.4"
       provider-name="XBMC Community">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.tvshows"
             language="multi"
             library="tvrage.xml"
             cachepersistence="00:15"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Fetch TV show metadata from TVRage.com</summary>
    <description lang="en">This XBMC Scraper uses the TVRage.com for its show and episode data.</description>
    <platform>all</platform>
  </extension>
</addon>
